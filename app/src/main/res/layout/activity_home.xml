<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_circle"
    tools:context=".activities.home.HomeActivity">

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.547"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.926" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="150dp"
        android:layout_height="39dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="65dp"
        android:fontFamily="@font/nunito_semi_bold"
        android:text="UserName"
        android:textSize="25sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSkinSight"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/semiLightBlue"
        android:fontFamily="@font/poppins_semibold"
        android:text="Skin Sight"
        android:textColor="@color/semiLightBlue"
        android:textSize="40sp"

        app:layout_constraintStart_toStartOf="@+id/tvName"
        app:layout_constraintTop_toBottomOf="@+id/tvName" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/nunito_semi_bold"
        android:text="Check your facial skin health now!"
        app:layout_constraintStart_toStartOf="@+id/tvSkinSight"
        app:layout_constraintTop_toBottomOf="@+id/tvSkinSight" />


    <Button
        android:id="@+id/btnSkinDetection"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/gradient_button"
        android:gravity="start|center_vertical"
        app:backgroundTint="@null"
        app:layout_constraintBaseline_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDescription" />

    <TextView
        android:id="@+id/tvSkinDetection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="Skin Detection"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnSkinDetection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.244"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnSkinDetection"
        app:layout_constraintVertical_bias="0.291" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_semibold"
        android:text="Check your facial skin health now"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/tvSkinDetection"
        app:layout_constraintTop_toBottomOf="@+id/tvSkinDetection" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/face"
        app:layout_constraintBottom_toBottomOf="@+id/btnSkinDetection"
        app:layout_constraintEnd_toEndOf="@+id/btnSkinDetection"
        app:layout_constraintHorizontal_bias="0.56"
        app:layout_constraintStart_toEndOf="@+id/tvSkinDetection"
        app:layout_constraintTop_toTopOf="@+id/btnSkinDetection" />

    <Button
        android:id="@+id/btnCatalogue"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/gradient_button"
        android:text="Catalogue"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSkinDetection" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/square_button"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="@+id/btnCatalogue"
        app:layout_constraintTop_toBottomOf="@+id/btnCatalogue" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/square_button"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toStartOf="@+id/btn3"
        app:layout_constraintHorizontal_bias="0.177"
        app:layout_constraintStart_toEndOf="@+id/btn1"
        app:layout_constraintTop_toBottomOf="@+id/btnCatalogue" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/square_button"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toStartOf="@+id/btn4"
        app:layout_constraintTop_toBottomOf="@+id/btnCatalogue" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/square_button"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="@+id/btnCatalogue"
        app:layout_constraintTop_toBottomOf="@+id/btnCatalogue" />


</androidx.constraintlayout.widget.ConstraintLayout>