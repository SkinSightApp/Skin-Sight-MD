<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_circle"
    tools:context=".activities.home.HomeActivity">

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.547"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.926" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="150dp"
        android:layout_height="39dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="65dp"
        android:fontFamily="@font/nunito_semi_bold"
        android:text="UserName"
        android:visibility="invisible"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSkinSight"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/semiLightBlue"
        android:fontFamily="@font/poppins_semibold"
        android:text="Skin Sight"
        android:textColor="@color/semiLightBlue"
        android:textSize="40sp"

        app:layout_constraintStart_toStartOf="@+id/tvName"
        app:layout_constraintTop_toBottomOf="@+id/tvName" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/nunito_semi_bold"
        android:text="Check your facial skin health now!"
        app:layout_constraintStart_toStartOf="@+id/tvSkinSight"
        app:layout_constraintTop_toBottomOf="@+id/tvSkinSight" />

    <Button
        android:id="@+id/btnSkinDetection"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/gradient_button"
        android:text="Skin Detection\nCheck your facial skin health now"
        android:gravity="start|center_vertical"
        android:paddingStart="16dp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDescription" />


    <Button
        android:id="@+id/btnCatalogue"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/gradient_button"
        android:text="Catalogue"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSkinDetection" />



</androidx.constraintlayout.widget.ConstraintLayout>